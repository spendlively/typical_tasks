
////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////FirePHP/////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////
Firebug and FirePHP
//Потребуется od_start();

$firephp = FirePHP::getInstance(true);

$firephp->log('This text you will see in firebug');
$firephp->log('Text', 'Label');
$firephp->log(xdebug_get_declared_vars(), 'xdebug_get_declared_vars');

$firephp->trace('Trace');

$firephp->info('Notice');
$firephp->warn('Warning');
$firephp->error('Error');





////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////ChromePHP/////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////
//Не поддерживает trace
//Потребуется od_start();

//Установка
chromephp.com
После установки нужно включить расширение в правом перхнем углу браузера
А также подправить опции: включить номера строк.

ChromePhp::log('This text you will see in console');
ChromePhp::log(__FILE__ . ':' . __LINE__, 'Text');
ChromePhp::log('Label', xdebug_get_declared_vars());

ChromePhp::groupCollapsed('backtrace');
ChromePhp::log(debug_backtrace());
ChromePhp::groupEnd();

ChromePhp::info('Info');
ChromePhp::warn('Warning');
ChromePhp::error('Error');





